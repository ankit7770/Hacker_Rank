#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main(){
    char* s = (char *)malloc(10240 * sizeof(char));
    int r=0;
    scanf("%s",s);
    for(int i=0;i<strlen(s);i++)
        {
        if(s[i]>64&&s[i]<91)
            r++;
    }
    printf("%d",r+1);
    return 0;
}
